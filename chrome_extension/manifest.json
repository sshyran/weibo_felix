{
  "name": "Weibo Felix",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Fix-Weibo, Felix!",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Weibo Felix",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://weibo.com/*"],
    "css": ["weibo_felix.css"],
    "js": ["jquery-1.8.3.min.js", "weibo_felix.js"]
  }],
  "permissions": [
    "webRequest",
    "<all_urls>"
  ]
}
