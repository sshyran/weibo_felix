{
  "name": "Weibo Felix",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Fix-Weibo, Felix!",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "微博快修",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://weibo.com/*"],
    "exclude_matches": ["*://weibo.com/messages*"],
    "js": ["jquery-1.8.3.min.js", "weibo_felix.js"],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["event_page.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "weibo_felix.css"
  ]
}
